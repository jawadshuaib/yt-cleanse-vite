{
  "compilerOptions": {
    "target": "es2015", // Changed from "es5" to "es2015" to support Set iteration
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false, // Disable all strict type-checking options
    // Optionally, you can disable specific strict flags instead of the whole "strict" mode:
    // "strictNullChecks": false,
    // "noImplicitAny": false,
    // "strictFunctionTypes": false,
    // "strictBindCallApply": false,
    // "strictPropertyInitialization": false,
    // "alwaysStrict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "constants.ts", "services/**/*"],
  "exclude": [
    "postcss.config.js",
    "vite.config.js",
    "tailwind.config.js",
    "node_modules"
  ]
}
